<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etA"
        android:layout_width="82dp"
        android:layout_height="48dp"
        android:layout_marginTop="72dp"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etB"
        android:layout_width="82dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="@+id/etA"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etA"
        app:layout_constraintTop_toBottomOf="@+id/etA" />

    <EditText
        android:id="@+id/etC"
        android:layout_width="82dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="@+id/etB"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etB"
        app:layout_constraintTop_toBottomOf="@+id/etB" />

    <Button
        android:id="@+id/calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:onClick="calc"
        android:text="Calc"
        app:layout_constraintEnd_toEndOf="@+id/etC"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etC"
        app:layout_constraintTop_toBottomOf="@+id/etC" />

    <TextView
        android:id="@+id/tvA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="A"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/etA"
        app:layout_constraintEnd_toStartOf="@+id/etA"
        app:layout_constraintTop_toTopOf="@+id/etA"
        app:layout_constraintVertical_bias="0.62" />

    <TextView
        android:id="@+id/tvB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="B"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/etB"
        app:layout_constraintEnd_toStartOf="@+id/etB"
        app:layout_constraintTop_toTopOf="@+id/etB"
        app:layout_constraintVertical_bias="0.448" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="C"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/etC"
        app:layout_constraintEnd_toStartOf="@+id/etC"
        app:layout_constraintTop_toTopOf="@+id/etC"
        app:layout_constraintVertical_bias="0.413" />

    <TextView
        android:id="@+id/tvX1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="X1"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/calc" />

    <TextView
        android:id="@+id/tvX2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="X2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tvX1"
        app:layout_constraintTop_toBottomOf="@+id/tvX1" />

    <TextView
        android:id="@+id/tvresulX1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/calc"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="@+id/calc"
        app:layout_constraintTop_toTopOf="@+id/tvX1" />

    <TextView
        android:id="@+id/tvresultX2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/tvresulX1"
        app:layout_constraintStart_toStartOf="@+id/tvresulX1"
        app:layout_constraintTop_toTopOf="@+id/tvX2" />

</androidx.constraintlayout.widget.ConstraintLayout>